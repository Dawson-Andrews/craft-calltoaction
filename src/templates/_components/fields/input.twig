{% import "_includes/forms" as forms %}

{{ forms.textField({
    label: 'Text',
    instructions: 'Call to action button text',
    id: 'text',
    name: name ~ '[text]',
    value: value.text})
}}

{{ forms.textField({
    label: 'URL',
    instructions: 'Call to action path or URL',
    id: 'url',
    name: name ~ '[url]',
    value: value.url})
}}
